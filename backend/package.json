{
	"name": "@guildtv/elections-backend",
	"private": true,
	"version": "2.0.0",
	"description": "A Web user interface for Guild elections Graphics",
	"author": "Rob Sumner <robfsumner@gmail.com> (http://robertsumner.co.uk)",
	"type": "module",
	"scripts": {
		"start": "NODE_ENV=production node ./dist/server.js",
		"dev": "NODE_ENV=development nodemon --ignore dumps/ --exec 'ts-node' ./src/server.ts",
		"lint:raw": "eslint --ext .ts --ext .js --ext .tsx --ext .jsx --ignore-pattern dist",
		"lint": "yarn lint:raw .",
		"lint-fix": "yarn lint --fix",
		"migrate": "NODE_ENV=development sequelize --config=sequelize.json db:migrate",
		"dist": "rimraf dist && tsc"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/GuildTV/elections-webui.git"
	},
	"dependencies": {
		"body-parser": "^1.20.2",
		"cors": "^2.8.5",
		"deep-equal": "^2.2.3",
		"express": "^4.18.3",
		"mysql2": "^3.9.2",
		"reflect-metadata": "^0.2.1",
		"sequelize": "^6.37.1",
		"sequelize-cli": "^6.6.2",
		"sequelize-typescript": "^2.1.6",
		"socket.io": "^4.7.4",
		"underscore": "^1.13.6",
		"uuid": "^9.0.1",
		"xml2js": "^0.6.2",
		"xmlbuilder": "^15.1.1"
	},
	"devDependencies": {
		"@types/deep-equal": "^1.0.4",
		"@types/express": "^4.17.21",
		"@types/node": "^20.11.26",
		"@types/underscore": "^1.11.15",
		"@types/uuid": "^9.0.8",
		"@types/validator": "^13.11.9",
		"@types/xml2js": "^0.4.14",
		"nodemon": "^3.1.0",
		"rimraf": "^5.0.5",
		"ts-node": "^10.9.2",
		"typescript": "^5.4.2"
	},
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	}
}
